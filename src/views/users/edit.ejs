<!DOCTYPE html>
<html lang="pt-BR">
  <%- include('../partials/header') %>
<body>
  <div class="container-fluid">
    <%- include('../partials/navbar') %>
    <div class="card">
      <div class="card-header">
        <h4>Editar usuário</h4>
      </div>
      <div class="card-body">
        <form method="post" action="./save">
          <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" name="name" id="name" class="form-control" placeholder="Informe o nome do usuário" value="<%= user.name %>" />
          </div>
          <div class="form-group">
            <label for="email">E-mail</label>
            <input type="text" name="email" id="email" class="form-control" placeholder="Informe o e-mail do usuário" value="<%= user.email %>" />
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
          <input type="hidden" id="userId" name="userId" value="<%= user.id %>" />
        </form>
      </div>
    </div>
    <%- include('../partials/footer') %>
  </div>
</body>
<%- include('../partials/scripts') %>
</html>
