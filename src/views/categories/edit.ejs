<!DOCTYPE html>
<html lang="pt-BR">
  <%- include('../partials/header') %>
<body>
  <div class="container-fluid">
    <%- include('../partials/navbar') %>
    <div class="card">
      <div class="card-header">
        <h4>Editar categoria</h4>
      </div>
      <div class="card-body">
        <form method="post" action="./save">
          <div class="form-group">
            <label for="title">Título</label>
            <input type="text" name="title" id="title" class="form-control" placeholder="Informe o título da categoria" value="<%= category.title %>" />
          </div>
          <div class="form-group">
            <label for="description">Descrição</label>
            <textarea id="description" name="description" rows="5" class="form-control" placeholder="Escreva uma breve descrição"><%= category.description %></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
          <input type="hidden" id="categoryId" name="categoryId" value="<%= category.id %>" />
        </form>
      </div>
    </div>
    <%- include('../partials/footer') %>
  </div>
</body>
<%- include('../partials/scripts') %>
</html>
